@* Notification.razor *@
<div class="alert @AlertClass" role="alert" style="display:@(IsVisible ? "block" : "none")">
    @Message
</div>

@code {
    [Parameter]
    public string Message { get; set; }

    [Parameter]
    public string AlertClass { get; set; } = "alert-info";

    [Parameter]
    public bool IsVisible { get; set; } = false;

    public void Show(string message, string alertClass = "alert-info")
    {
        Message = message;
        AlertClass = alertClass;
        IsVisible = true;
        StateHasChanged();
    }

    public void Hide()
    {
        IsVisible = false;
        StateHasChanged();
    }
}